# LUXE E-Commerce Environment Configuration
# Copy this file to .env and update the values

# App Settings
APP_NAME="LUXE E-Commerce API"
APP_VERSION="1.0.0"
DEBUG=true

# API Settings
API_PREFIX="/api/v1"

# Database
# For SQLite (default, good for development):
DATABASE_URL="sqlite:///./luxe.db"
# For PostgreSQL (recommended for production):
# DATABASE_URL="postgresql://user:password@localhost:5432/luxe"

# JWT Configuration
# IMPORTANT: Change this in production!
SECRET_KEY="your-super-secret-key-change-in-production-use-openssl-rand-hex-32"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated for multiple)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# File Upload
UPLOAD_DIR="uploads"
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=["jpg","jpeg","png","webp","gif"]

# Pagination
DEFAULT_PAGE_SIZE=12
MAX_PAGE_SIZE=100

# AI Settings (configure when you implement AI features)
AI_ENABLED=false
AI_MODEL_PATH=""
AI_API_KEY=""

# OpenAI (if using OpenAI for AI features)
# OPENAI_API_KEY=""
# OPENAI_MODEL="gpt-3.5-turbo"

# Anthropic (if using Claude for AI features)
# ANTHROPIC_API_KEY=""
# ANTHROPIC_MODEL="claude-3-sonnet-20240229"
